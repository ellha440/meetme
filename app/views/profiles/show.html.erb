<p id="notice"><%= notice %></p>
<div class ="row">
  <div class="col m6 card">
    <div class="card-image waves-effect waves-block waves-light">
      <img class="activator" src="<%= asset_path @profile.image %>">
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4"><%= @profile.full_name %>
        <i class="material-icons right">more_vert</i>
      </span>
      <p>  <%= @profile.job_title %> </p>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">Edit profile<i class="material-icons right">close</i></span>
      <%= render 'profiles/form' %>
    </div>
  </div>
</div>




<%= link_to 'Back', profiles_path %>
